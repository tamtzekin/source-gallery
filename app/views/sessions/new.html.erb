<h1>Log in</h1>

        <% if flash[:login_failed].present? %>
            <p>
                <div class="flash-message">
                    <%= flash[:login_failed] %>
                </div>
        </p>
        <% end %>

<%= simple_form_for :session, url: session_path do |f| %>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.button :submit, "Log in" %>

<% end %>