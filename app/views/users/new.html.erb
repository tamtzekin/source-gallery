<h1>Sign up</h1>

<%= simple_form_for @user do |f| %>
    <%= f.input :name %>
    <%= f.input :username %>
    <%= f.input :email %>

    <%# These two come from the has_secure_password method %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>

    <%= f.button :submit %>
    
<% end %>
